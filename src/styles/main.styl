body
  display grid
  grid-template-rows 100px
  grid-template-columns 1fr
  max-width 1200px
  margin auto
  padding-top 20px
  font-family sans-serif

.header-nav-wrapper
  display flex
  align-items flex-end
  padding 0 20px

  &__header
    width 40%
    height 100%
    padding-left 20px
    padding-right 20px
    display flex
    align-items center
    justify-content space-between
    font-size 24px
    background-color lightgray

    &-title
      font-size 34px

  &__menu
    display flex
    width 65%
    justify-content flex-end
    text-align center
    gap 20px
    padding 10px 0
    background-color lightgray

    &-link
      text-decoration none
      color black
      font-size 18px
      padding 5px 15px
      margin-right 5px

      &_active
        color red

      &:hover
        color white
        background-color rgb(205, 92, 92, 0.4)

.gallery
  display grid
  grid-template-columns repeat(3, 1fr)
  padding-top 2px
  padding-left 20px
  padding-right 20px
  gap 2px

  &__item
    display flex
    justify-content center
    align-items center
    height 200px
    font-size 1.2em

    & img
      width 100%
      height 100%

.logos
  display flex
  justify-content space-around
  align-items center
  padding 20px

  &__item
    text-align center
    margin 0 15px

    &_rounded
      width 60px
      height 60px
      display flex
      flex-direction column
      justify-content center
      align-items center
      margin 10px auto

      & img
        width 100%
        height 100%
        border-radius 50%

    &-text
      font-size 18px

.content
  display flex
  flex-direction column
  padding 20px
  width 80%
  margin auto

  &__table
    font-size 0.6rem

    & table
      border-collapse collapse
    & td, tr, th
      border thin solid

  &__form
    margin-bottom 10px

  &__text-with-img
    display flex
    gap 20px
    align-items center
    justify-content flex-start

    &_box
        width 100%
        max-width 300px

        & img
          width 100%
          min-width 190px

  &__text
    font-size 18px

    &_headline
      text-align center
      margin auto
      width 60%
      padding 20px 0
      font-size 32px

.footer
  background-color grey
  padding 10px
  display flex
  justify-content space-between
  align-items center

  &__info
    font-size 16px

@media all and (max-width: 600px)
  body
    display flex
    flex-direction column
    padding 0

  .header-nav-wrapper
    flex-direction column
    align-items center

    &__header
      width 100%
      padding 10px
      font-size 28px
      font-weight bold
      justify-content center
      text-align center

    &__menu
      display grid
      grid-template-columns repeat(2, 1fr)
      gap 10px
      width 100%
      justify-content center
      padding 10px 10px

    &__menu-link
      font-size 20px
      text-align center
      padding 10px 0

  .gallery
    grid-template-columns 1fr
    gap 10px
    margin-top 8px
    padding 10px 15%

  .logos
    flex-direction column
    gap 20px

  .content

    &__table
      font-size 0.4rem

    &__summary
      margin-bottom 10px

    &__text-with-img
      display flex
      flex-direction column
      gap 20px
      align-items center

    &__text
      width 100%
      font-size 18px
      text-align justify

      &_headline
        text-align center
        margin auto
        width 60%
        padding 20px 0
        font-size 32px

    &__img-box
      width 100%
      text-align center
      margin-top 20px
      display flex
      justify-content center
      align-items center

      & img
        width 100%
        min-width 145px
        min-height 145px